<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_main">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/exercises_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        </Spinner>
        <EditText android:id="@+id/repsInput"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/rep_input_default" />
        <TextView
            android:text = "Calories"
            android:id ="@+id/inputUnits"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/pushup"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
        <ImageView
            android:src="@drawable/flexions"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
        <ImageView
            android:src="@drawable/exercise9"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text= "Push-ups"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text= "Sit-ups"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text= "Squats"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="7dp">
        <TextView android:id="@+id/ex1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/ex2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/ex3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/legup"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
        <ImageView
            android:src="@drawable/plank"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
        <ImageView
            android:src="@drawable/jump"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text= "Leg-lifts"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text= "Plank"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text= "Jumping Jacks"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="7dp">
        <TextView android:id="@+id/ex4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/ex5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/ex6"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/pulling"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
        <ImageView
            android:src="@drawable/cycling"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
        <ImageView
            android:src="@drawable/walk"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text= "Pull-ups"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text= "Cycling"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text= "Walking"
            android:textAlignment="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="7dp">
        <TextView android:id="@+id/ex7"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/ex8"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/ex9"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/runer"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
        <ImageView
            android:src="@drawable/swim"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
        <ImageView
            android:src="@drawable/stair"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text= "Jogging"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text= "Swimming"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text= "Stair-Climbing"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView android:id="@+id/ex10"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/ex11"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/ex12"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
</ScrollView>



